<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#1d1b1b"
    android:id="@+id/login_layout"
    tools:context="com.example.android.loginpage.MainActivity">

    <TextView
        android:id="@+id/loginForAdminTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Admin?"
        android:textColor="#9041e441"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/amaranth"
        android:text="LOGIN"
        android:textColor="#9041e441"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:drawableLeft="@drawable/userblack"
        android:background="@drawable/edit_round"
        android:backgroundTint="#ffffff"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:maxLines="1" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/passwordblack"
        android:drawablePadding="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:inputType="textPassword"  />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/button_shape"
        android:text="Login"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/notamemberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="30dp"
            android:text="Not a Member?"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_marginLeft="5dp"
            android:textColor="#9041e441"
            android:textSize="24sp" />

    </LinearLayout>





</LinearLayout>
