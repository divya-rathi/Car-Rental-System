<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1b1b"
    tools:context="com.example.android.loginpage.LoginAdmin">


    <TextView
        android:id="@+id/adminLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/amaranth"
        android:text="Login Admin"
        android:textSize="30sp"
        android:textColor="#9041e441"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/adminLoginTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:hint="Username"
        android:inputType="text"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/userblack"
        android:backgroundTint="#ffffff"
        android:drawablePadding="10dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/usernameEditText"
        android:layout_alignStart="@+id/usernameEditText"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/passwordblack"
        android:drawablePadding="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/button_shape"
        android:text="Login"
        android:textSize="20sp"/>


</RelativeLayout>
